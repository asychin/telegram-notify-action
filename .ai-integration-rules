      schedule:
        - cron: "*/15 * * * *"  # Every 15 minutes
      workflow_dispatch:
    
    jobs:
      health_check:
        runs-on: ubuntu-latest
        steps:
          - name: ğŸ¥ Check System Health
            id: health_check
            run: |
              # Your health check logic here
