                  "customMessage": "ğŸ¥ System Health: ${{ steps.health_check.outputs.status }}\nğŸ“Š Response Time: ${{ steps.health_check.outputs.response_time }}ms\nğŸš¨ Errors: ${{ steps.health_check.outputs.error_count }}"
                }

          - name: ğŸš¨ Critical Alert
            if: steps.health_check.outputs.status != 'healthy'
            uses: asychin/telegram-notify-action@v3.1.0
            with:
              telegram_token: ${{ secrets.TELEGRAM_BOT_TOKEN }}
              chat_id: ${{ secrets.TELEGRAM_ALERT_CHAT_ID }}
              template: error
              template_vars: |
                {
                  "customMessage": "ğŸš¨ CRITICAL SYSTEM ALERT\n\nğŸ’¥ Health Check Failed\nâ° Time: $(date)\nğŸ”— Repository: ${{ github.repository }}"
                }
              inline_keyboard: |
                [
                  [
                    {"text": "ğŸ”§ Fix Now", "url": "${{ github.server_url }}/${{ github.repository }}/actions"},
                    {"text": "ğŸ“Š Logs", "url": "${{ github.server_url }}/${{ github.repository }}/actions/runs/${{ github.run_id }}"}
                  ]
                ]

  # Weekly summary report
  weekly_report:
    name: ğŸ“Š Weekly System Report
    on:
      schedule:
        - cron: "0 9 * * 1"  # Every Monday at 9 AM
    
    jobs:
      generate_report:
        runs-on: ubuntu-latest
        steps:
          - name: ğŸ“Š Generate Weekly Stats
            id: stats
            run: |
              echo "uptime=99.8" >> $GITHUB_OUTPUT
              echo "avg_response=180" >> $GITHUB_OUTPUT
              echo "incidents=2" >> $GITHUB_OUTPUT

          - name: ğŸ“ˆ Weekly Report
            uses: asychin/telegram-notify-action@v3.1.0
            with:
              telegram_token: ${{ secrets.TELEGRAM_BOT_TOKEN }}
              chat_id: ${{ secrets.TELEGRAM_CHAT_ID }}
              message: |
                ğŸ“Š <b>Weekly System Report</b>
                <i>$(date -d 'last monday' '+%Y-%m-%d') - $(date -d 'sunday' '+%Y-%m-%d')</i>

                ğŸ¯ <b>Uptime:</b> ${{ steps.stats.outputs.uptime }}%
                âš¡ <b>Avg Response:</b> ${{ steps.stats.outputs.avg_response }}ms
                ğŸš¨ <b>Incidents:</b> ${{ steps.stats.outputs.incidents }}

                ğŸŒ¿ <b>Environment:</b> <code>${{ github.ref_name }}</code>

                ${{ steps.stats.outputs.uptime >= 99.5 && 'ğŸ‰ Excellent system performance this week!' || 'âš ï¸ System performance needs attention.' }}
```

